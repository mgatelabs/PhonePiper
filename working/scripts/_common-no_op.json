{
  "vars": [
    {
      "name": "_screen_saver",
      "value": "0",
      "type": "INT",
      "modify": "VISIBLE",
      "display": "Screen Saver",
      "tierId": "timers",
      "displayType": "SECONDS"
    },
    {
      "name": "_module",
      "description": "Total Elspased Time while inside a module",
      "value": "0",
      "type": "INT",
      "modify": "VISIBLE",
      "display": "Module Time",
      "tierId": "timers",
      "displayType": "SECONDS"
    },
    {
      "name": "_elapsed",
      "description": "Total Elspased Time",
      "value": "0",
      "type": "INT",
      "modify": "VISIBLE",
      "display": "Elapsed Time",
      "tierId": "timers",
      "displayType": "SECONDS"
    },
    {
      "name": "_loops",
      "description": "Safety timer to stop operations after a long period",
      "value": "0",
      "type": "INT",
      "modify": "VISIBLE",
      "display": "NoOp",
      "tierId": "timers",
      "displayType": "SECONDS"
    },
    {
      "name": "allow-ss",
      "display": "Enable Screen Saver",
      "value": "0",
      "type": "INT",
      "modify": "EDITABLE",
      "displayType": "BOOLEAN",
      "order": 10
    },
    {
      "name": "os-icon",
      "display": "App Icon",
      "value": "a",
      "type": "STRING",
      "modify": "EDITABLE",
      "order": 20,
      "tierId": "os",
      "values": [
        {"name": "A", "value": "a"},
        {"name": "B", "value": "b"},
        {"name": "C", "value": "c"}
      ],
      "description": "Which menu item do you wish to farm.  Typically the first item is a Exploration so you would want two or three."
    },
    {
      "name": "os-recovery",
      "display": "Recovery",
      "value": "0",
      "type": "INT",
      "modify": "EDITABLE",
      "order": 20,
      "tierId": "os",
      "values": [
        {"name": "Stop", "value": "0"},
        {"name": "Recover", "value": "1"}
      ],
      "description": "Which menu item do you wish to farm.  Typically the first item is a Exploration so you would want two or three."
    }
  ],
  "varTiers": [
    {"title":"OS", "id":"os", "tabId": "controls"},
    {"title":"Timers", "id":"timers", "tabId": "stats"}
  ],
  "states": {
    "main": {
      "name": "Common - Main Template",
      "includes": [
        "_common-power_down"
      ]
    },
    "recovery": {
      "name": "Common - Recovery Template",
      "includes": [
        "_common-recovery_os"
      ]
    },
    "log-in": {
      "name": "Common - Recovery Login Template",
      "includes": [
        "_common-power_down"
      ]
    },
    "reset": {
      "name": "Common - Reset",
      "includes": [
        "_reset-include_*",
        "_common-reset"
      ],
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Resetting State"
            }
          ]
        }
      ]
    },
    "_common-screen_saver": {
      "name": "Common - Screen Saver",
      "statements": [
        {
          "condition": {
            "var": "_screen_saver",
            "is": "GREATER",
            "value": "900",
            "and": [
              {
                "is": "EQUAL",
                "var": "allow-ss",
                "value": "1"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            {
              "type": "INFO",
              "value": "Screen saver activated"
            },
            {
              "type": "EVENT",
              "value": "camera"
            },
            {
              "type": "WAIT",
              "value": "5000"
            },
            {
              "type": "EVENT",
              "value": "back"
            },
            {
              "type": "WAIT",
              "value": "15000"
            },
            {
              "type": "INFO",
              "value": "Returning"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        }
      ]
    },
    "_common-recovery_os": {
      "name": "Common - End Script",
      "includes": [
        "_common-power_down"
      ]
    },
    "_common-power_down": {
      "name": "Common - Power Down",
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Stopping operations"
            },
            {
              "type": "STOP"
            }
          ]
        }
      ]
    },
    "_common-no_op": {
      "name": "Common - No-Op",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-connection_error"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-connection_error-ok"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-quest_restart"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-quest_restart-yes"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-maintenance"
          },
          "actions": [

            {
              "type": "INFO",
              "value": "Maintenance has been detected, stopping operations"
            },
            {
              "type": "STOP",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-connection_error_2"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-connection_error_2-ok"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-logo"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "screen-center"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-play_mission"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-play_mission-yes"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-daily-notice"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-daily-close"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "os-unable_to_access_data"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "os-unable_to_access_data-ok"
            },
            {
              "type": "WAIT",
              "value": "4000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-energy_recovery"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-energy_recovery-back"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-companion_changed"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-companion_changed-ok"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "os-home",
            "or": [
              {
                "is": "SCREEN",
                "value": "os-home-top"
              },
              {
                "is": "SCREEN",
                "value": "os-home-bottom"
              },
              {
                "is": "SCREEN",
                "value": "os-home-left"
              },
              {
                "is": "SCREEN",
                "value": "os-home-right"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Home Screen Detected, resuming",
              "condition": {
                "is": "EQUAL",
                "var": "os-recovery",
                "value": "1"
              }
            },
            {
              "type": "TAP",
              "value": "os-app-icon_${os-icon}",
              "condition": {
                "is": "EQUAL",
                "var": "os-recovery",
                "value": "1"
              }
            },
            {
              "type": "MOVE",
              "value": "log-in",
              "condition": {
                "is": "EQUAL",
                "var": "os-recovery",
                "value": "1"
              }
            },
            {
              "type": "INFO",
              "value": "Stopping due to recovery"
            },
            {
              "type": "STOP"
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-log_in_again"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Log in Required"
            },
            {
              "type": "MOVE",
              "value": "log-in"
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-new_data"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "New Date - Log in Required"
            },
            {
              "type": "MOVE",
              "value": "log-in"
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-title"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "App Restarted"
            },
            {
              "type": "MOVE",
              "value": "log-in"
            }
          ]
        },
        {
          "condition": {
            "var": "_loops",
            "is": "GREATER",
            "value": "900"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Too many cycles ${_loops}, stopping run"
            },
            // Reset the counter, so the app will run after turning it back on
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "STOP",
              "value": ""
            }
          ]
        }
      ]
    },
    "_common-reset": {
      "name": "Common - Reset",
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Reset Loops"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_loops"
            },
            {
              "type": "INFO",
              "value": "Reset No-Op"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_module"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_elapsed"
            },
            {
              "type": "INFO",
              "value": "Reset Screen Saver"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            {
              "type": "STOP"
            }
          ]
        }
      ]
    },
    "@keepAlive": {
      "name": "Function - Keep Alive",
      "statements": [
        {
          "actions": [
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "RETURN"
            }
          ]
        }
      ]
    },
    "@resetModuleTimer": {
      "name": "Function - Reset Module Timer",
      "statements": [
        {
          "actions": [
            {
              "type": "SET",
              "var": "_loops",
              "value": "0"
            },
            {
              "type": "RETURN"
            }
          ]
        }
      ]
    }
  }
}