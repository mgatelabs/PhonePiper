            {"type": "MOVE", "value": "any_to_home", "args": {"toState": "${_route_from_expedition}"}}
          ]
        },
        {
          "condition": {
            "is": "EQUAL",
            "var": "segment",
            "value": "1",
            "and": [
              {
                "is": "SCREEN",
                "value": "menu-expedition-ongoing"
              }
            ],
            "andOr": [
              {
