//@formatter:off
{
  "vars": [
    {
      "name": "refresh-raid",
      "display": "Raid - Refreshes",
      "value": "0",
      "type": "INT",
      "modify": "EDITABLE",
      "order": 20,
      "skipSave": "true",
      "tierId": "refresh",
      "description": "How many times are you alright with refreshing your RAID orbs?"
    },
    {
      "name": "allow-raid",
      "display": "Raid",
      "value": "0",
      "type": "INT",
      "modify": "EDITABLE",
      "displayType": "BOOLEAN",
      "order": 10,
      "tierId": "enable",
      "values": [
        {"name": "Enabled", "value": "1"},
        {"name": "Disabled", "value": "0"}
      ],
      "description": "Enable or disable Raiding"
    },
    {
      "name": "raid-method",
      "display": "Method",
      "value": "3",
      "type": "INT",
      "modify": "EDITABLE",
      "displayType": "BOOLEAN",
      "order": 10,
      "tierId": "raid",
      "values": [
        {"name": "Event Link", "value": "3"},
        {"name": "Banner Link", "value": "2"},
        {"name": "Vortex Item", "value": "1"}
      ],
      "description": "Enable or disable Raiding"
    },
    {
      "name": "raid-menu-item",
      "display": "Menu Item",
      "value": "0",
      "type": "INT",
      "modify": "EDITABLE",
      "order": 21,
      "tierId": "raid",
      "values": [
        {"name": "One (Usually Elt)", "value": "0"},
        {"name": "Two (Usually Pro)", "value": "1"},
        {"name": "Three (Usually Adv)", "value": "2"}
      ],
      "description": "Which raid menu item do you want to farm?"
    },
    {
      "name": "vortex-item",
      "display": "Vortex Item",
      "value": "0",
      "type": "INT",
      "modify": "EDITABLE",
      "order": 20,
      "tierId": "raid",
      "values": [
        {"name": "One (Top)", "value": "0"},
        {"name": "Two", "value": "1"},
        {"name": "Three", "value": "2"}
      ],
      "description": "Which vortex item is the raid?"
    },
    {
      "name" : "raid-party-index",
      "display" : "Party",
      "value" : "0",
      "type" : "INT",
      "modify" : "EDITABLE",
      "displayType" : "STANDARD",
      "order" : 0,
      "tierId": "raid",
      "values": [
        {"name": "One (Left)", "value": "0"},
        {"name": "Two", "value": "1"},
        {"name": "Three", "value": "2"},
        {"name": "Four", "value": "3"},
        {"name": "Five (Right)", "value": "4"}
      ],
      "description": "Which party, unit group do you RAID with?"
    },
    {
      "name": "raid_runs",
      "display": "Raids",
      "value": "0",
      "type": "INT",
      "modify": "VISIBLE",
      "order": 5,
      "tierId": "stats",
      "description": "How many RAID runs have been accomplished"
    },
    {
      "name": "_route_from_raid",
      "display": "After Raid",
      "value": "ARENA",
      "varValueId": "ROUTES",
      "type": "STRING",
      "modify": "EDITABLE",
      "order": 10,
      "tierId": "state-route",
      "description": "Where to go next after Raid is finished.  Default is ARENA to Arena."
    }
  ],
  "varTiers": [
    {"title":"Raid", "id":"raid", "tabId":"raid"}
  ],
  "varValues": [
    {"group":"ROUTES", "title":"Raid", "value":"RAID"}
  ],
  "states":{

    "_any_router_to_raid": {
      "name": "Any - Home Can Goto Raid Screen?",
      "variables": {
        "toState": {
          "value": "RAID",
          "type": "STRING"
        }
      },
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home",
            "and": [
              {
                "is": "EQUAL",
                "value": "RAID",
                "var": "toState"
              }
            ]
          },
          "actions": [
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            {
              "type": "MOVE",
              "value": "home_to_raid",
              "condition": {
                "is": "EQUAL",
                "value": "1",
                "var": "allow-raid"
              }
            },
            {
              "type": "SET",
              "value": "${_route_from_raid}",
              "var": "toState"
            },
            {
              "type": "REPEAT"
            }
          ]
        }
      ]
    },
    "raid-home": {
      "name": "Raid - Menu",
      "includes": [
        "_common-ml-goals-quick",
        "_common-ml-friend_0",
        "_common-ml-friend_none",
        "_raid-find_depart_team",
        "_raid-depart",
        "_raid-to_battle",
        "_common-no_op"
      ],
      "variables": {
        "InLoop": {
          "value": "0",
          "type": "INT"
        }
      },
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-raid_recovery",
            "and": [
              {
                "is": "GREATER",
                "var": "refresh-raid",
                "value": "0"
              }
            ]
          },
          "actions": [
            {
              "type": "ADD",
              "var": "refresh-raid",
              "value": "-1"
            },
            {
              "type": "INFO",
              "value": "We're out of raid orb's attempting to purchase more.  can purchase ${refresh-raid} more time(s)"
            },
            {
              "type": "TAP",
              "value": "menu-raid_recovery-yes"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-raid_screen",
            "andOr": [
              {
                "is": "SCREEN",
                "value": "menu-raid_orbs"
              },
              {
                "is": "GREATER",
                "var": "refresh-raid",
                "value": "0"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Orb Available, Starting Mission ${raid-menu-item}"
            },
            {
              "type": "TAP",
              "value": "menu-raid_${raid-menu-item}"
            },
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "WAIT",
              "value": "4500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-raid_screen",
            "and": [
              {
                "not": "SCREEN",
                "value": "menu-raid_orbs"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Out of Orbs, going home"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "MOVE",
              "value": "any_to_home",
              "args": { "toState": "ARENA" }
            }
          ]
        }
      ]
    },
    "_raid-find_depart_team": {
      "name": "Raid - Find Depart Team",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-depart",
            "and": [
              {
                "not": "SCREEN",
                "value": "menu-depart-team_${raid-party-index}"
              }
            ]
          },
          "actions": [
            {
              "type": "SWIPE_RIGHT",
              "value": "menu-depart-units"
            },
            {
              "type": "WAIT",
              "value": "1500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        }
      ]
    },
    "_raid-depart": {
      "name": "Raid - Depart",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-depart"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-depart-depart"
            },
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "WAIT",
              "value": "6500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        }
      ]
    },
    "_raid-to_battle": {
      "name": "To Raid Battle",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "game-battle"
          },
          "actions": [
            {
              "type": "LAP",
              "value": "BATTLE"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            {
              "type": "ADD",
              "var": "raid_runs",
              "value": "1"
            },
            {
              "type": "INFO",
              "value": "Starting raid ${raid_runs}"
            },
            {
              "type": "MOVE",
              "value": "raid-battle",
              "args": {
                "InLoop":"${InLoop}"
              }
            }
          ]
        }
      ]
    },
    "raid-battle": {
      "name": "Raid - Battle",
      "includes": [
        "_common_battle-auto",
        "_raid-battle-message",
        "_raid-to_results",
        "_common-no_op"
      ],
      "variables": {
        "InLoop": {
          "value": "0",
          "type": "INT"
        }
      }
    },
    "_raid-battle-message": {
      "name": "To Raid Results",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "battle-message"
          },
          "actions": [
            {
              "type": "TAP",
              "value": "menu-level"
            }
          ]
        }
      ]
    },
    "_raid-to_results": {
      "name": "To Raid Results",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-results-points",
            "or": [
              {
                "is": "SCREEN",
                "value": "menu-results-units"
              },
              {
                "is": "SCREEN",
                "value": "menu-results-items"
              },
              {
                "is": "SCREEN",
                "value": "menu-results-points_raid"
              },
              {
                "is": "SCREEN",
                "value": "menu-results-damage"
              },
              {
                "is": "SCREEN",
                "value": "menu-results-missions"
              }
            ]
          },
          "actions": [
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "MOVE",
              "value": "raid-results"
            }
          ]
        }
      ]
    },
    "raid-results": {
      "name": "Raid - Result",
      "includes": [
        "_common_mr-raid_points",
        "_common_mr-raid_damage",
        "_common_mr-units",
        "_common_mr-missions",
        "_common_mr-items",
        "_common_mr-friend_request",
        "_raid-to_home",
        "_common-no_op"
      ]
    },
    "_raid-to_home": {
      "name": "To Raid Screen",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-raid_screen"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Ending run ${runs}"
            },
            {
              "type": "MOVE",
              "value": "raid-home",
              "args": {
                "InLoop":"1"
              }
            }
          ]
        }
      ]
    },
    "home_to_raid": {
      "name": "Home - To Raid",
      "includes": [
        "_home_daily_fixes",
        "_common-vtx-items",
        "_common-no_op"
      ],
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home",
            "and": [
              {
                "is": "EQUAL",
                "var": "raid-method",
                "value": "2"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Going to Banner"
            },
            {
              "type": "TAP",
              "value": "menu-home-special"
            },
            {
              "type": "WAIT",
              "value": "4000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home",
            "and": [
              {
                "is": "EQUAL",
                "var": "raid-method",
                "value": "3"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Going to Event Link"
            },
            {
              "type": "TAP",
              "value": "menu-home-raid_event"
            },
            {
              "type": "WAIT",
              "value": "4000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home",
            "and": [
              {
                "is": "EQUAL",
                "var": "raid-method",
                "value": "1"
              }
            ]
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Going to Vortex"
            },
            {
              "type": "TAP",
              "value": "menu-home-vortex"
            },
            {
              "type": "WAIT",
              "value": "4000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-raid_screen"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Raid Screen"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "MOVE",
              "value": "raid-home"
            }
          ]
        },
        {
          "condition": {
            "is": "GREATER",
            "var": "_loops",
            "value": "60"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Could not find Raid, switching to ${_route_from_raid}"
            },
            {
              "type": "MOVE",
              "value": "any_to_home",
              "args": {
                "toState": "${_route_from_raid}"
              }
            }
          ]
        }
      ]
    },
    "_reset-include_raid": {
      "name": "Reset - Raid",
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Reset Raid Run Count"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "raid_runs"
            }
          ]
        }
      ]
    }

  }
}