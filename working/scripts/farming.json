  "states": {

    "main": {
      "name": "Main - Farming Switcher",
      "variables": {
        "toState": {
          "type": "STRING",
          "value": "RAID"
        }
      },
      "includes": [
        "_farm-to_results",
        "_farm-to_menu",
        "_farm-to_battle",
        "_home_daily_fixes",
        "_common-no_op"
      ],
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home"
          },
          "actions": [
            {
              "type": "MOVE",
              "value": "any_to_home"
            }
          ]
        }
      ]
    },

    "_home_daily_fixes": {
      "name": "Home - Daily Fixes",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home-daily"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Daily Login Reward, Claiming"
            },
            {
              "type": "TAP",
              "value": "menu-home-daily-claim"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home-login_bonus"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Login Bonus, OK"
            },
            {
              "type": "TAP",
              "value": "menu-home-login_bonus-ok"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-messages"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Message Screen"
            },
            {
              "type": "TAP",
              "value": "menu-messages-back"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        }
      ]
    },

    "any_to_home": {
      "name": "Any - To/From Home Screen Router",
      "includes": [
        "_any_router_to_*",
        "_any_can_extra",
        "_home_daily_fixes",
        "_common-no_op",
        "_backup_to_home"
      ],
      "variables": {
        "toState": {
          "value": "FARM",
          "type": "STRING"
        }
      },
      "statements":[
        {
          "actions": [
            {
              "type": "FINER",
              "value": "Looking for logic for ${toState}"
            },
            // Reset the module timer
            {
              "type": "SET",
              "value": "0",
              "var": "_module"
            }
          ]
        }
      ]
    },

    "_backup_to_home": {
      "name": "Include - Backup to Home Screen",
      "variables": {
        "backupDelay": {
          "value": "INT",
          "type": "0"
        }
      },
      "statements": [
        {
          "condition": {
            "not": "SCREEN",
            "value": "menu-home"
          },
          "actions": [
            {
              "type": "SET",
              "var": "setup",
              "value": "0"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            {
              "type": "EVENT",
              "value": "back"
            },
            {
              "type": "RANDOM",
              "var": "backupDelay",
              "args": {
                "min": "2500",
                "max": "3500"
              }
            },
            {
              "type": "INFO",
              "value": "Returning home with ${backupDelay}ms delay"
            },
            {
              "type": "WAIT",
              "value": "2500"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        }
      ]
    },

    "log-in": {
      "name": "Common - Recovery Log In (Override)",
      "variables": {
        "firstLoop": {
          "type": "INT",
          "value": "0"
        }
      },
      "includes": [
        "_log-in-once-*",
        "_log-in-end_once",
        "_log-in-common",
        "_home_daily_fixes"
      ]
    },

    "_log-in-common":{
      "name": "Common - Recovery Log In (Override)",
      "statements": [
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-log_in_again"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Tapping OK"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "TAP",
              "value": "menu-log_in_again-ok"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-new_data"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Tapping OK"
            },
            {
              "type": "SET",
              "value": "0",
              "var": "_screen_saver"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "TAP",
              "value": "menu-new_data-ok"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-title"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Tapping Screen Center"
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "TAP",
              "value": "screen-center"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-quest_restart"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Quest Restart Screen, stopping quest, returning to Home..."
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "TAP",
              "value": "menu-quest_restart-no"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-quest_erase"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Quest Erase Screen, returning to Home..."
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "TAP",
              "value": "menu-quest_erase-yes"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-quest_cleared"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Quest Cleared Screen, returning to Title..."
            },
            { "type": "CALL", "value": "@keepAlive" },
            {
              "type": "TAP",
              "value": "menu-quest_cleared-ok"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },
        {
          "condition": {
            "is": "SCREEN",
            "value": "menu-home"
          },
          "actions": [
            {
              "type": "INFO",
              "value": "Found Home Screen, attempting to recover..."
            },
            {
              "type": "MOVE",
              "value": "any_to_home"
            }
          ]
        }
      ]
    },

    "_log-in-end_once":{
      "name": "Common - Recovery Log In (Override)",
      "statements": [
        {
          "condition": {
            "is": "EQUAL",
            "var": "firstLoop",
            "value": "0"
          },
          "actions": [
            {
              "type": "SET",
              "var": "firstLoop",
              "value": "1"
            }
          ]
        }
      ]
    }

  }
}