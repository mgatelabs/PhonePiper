          "actions": [
            {
              "type": "INFO",
              "value": "Ayaka Used Purify+ (Cure Status + Barrier with 4 Turn Cool down)"
            },
            {
              "type": "SET",
              "var": "purify",
              "value": "4"
            },
            {
              "type": "SET",
              "var": "segment",
              "value": "1"
            },
            {
              "type": "CALL",
              "value": "@showUnitActions",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "CALL",
              "value": "@selectUnitAction",
              "args": {
                "row": "10",
                "column": "0"
              }
            },
            {
              "type": "WAIT",
              "value": "400"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "WAIT",
              "value": "400"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "WAIT",
