              "type": "SET",
              "var": "segment",
              "value": "1"
            },
            {
              "type": "CALL",
              "value": "@showUnitActions",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "CALL",
              "value": "@selectUnitAction",
              "args": {
                "row": "7",
                "column": "1"
              }
            },
            {
              "type": "WAIT",
              "value": "400"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "4"
              }
            },
            {
              "type": "WAIT",
              "value": "400"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "WAIT",
              "value": "400"
            },
            {
              "type": "REPEAT",
              "value": ""
