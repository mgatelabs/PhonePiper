              "type": "CONTINUE"
            },
            {
              "type": "INFO",
              "value": "Ayaka Has Her LB, what sort of world are we living in?  Pressing the button (TM)"
            },
            {
              "type": "SET",
              "var": "segment",
              "value": "1"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "WAIT",
              "value": "200"
            },
            {
              "type": "CALL",
              "value": "@tapUnit",
              "args": {
                "index": "3"
              }
            },
            {
              "type": "WAIT",
              "value": "2000"
            },
            {
              "type": "REPEAT",
              "value": ""
            }
          ]
        },

        // We have 4 alive units, but someone is not able to move, let's clense the slate clean
        {
          "condition": {
            "is": "CALL",
            "value": "@isBattleReady",
            "and": [
              { "is": "EQUAL", "value": "0", "var":"segment"},
