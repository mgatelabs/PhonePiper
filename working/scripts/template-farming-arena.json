          "actions": [
            {
              "type": "INFO",
              "value": "Ayaka Used Elysium (Heal + Barrier with 6 Turn Cool down)"
            },
            {
              "type": "SET",
              "var": "elysium",
              "value": "6"
            },
            {
              "type": "SET",
              "var": "segment",
              "value": "1"
