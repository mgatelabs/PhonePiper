{
  "states": {

    "main": {
      "name": "Feature Test",
      "includes": [
        "_variables",
        "_math",
        "_random",
        "_time",
        "_link",
        "_end"
      ],
      "variables": {
        "a": {"type": "INT", "value": "0"},
        "b": {"type": "INT", "value": "0"}
      },
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Starting Test"
            }
          ]
        }
      ]
    },

    "_variables": {
      "name": "Variable Test",
      "variables": {
        "a": {"type": "INT", "value": "0"},
        "b": {"type": "INT", "value": "0"}
      },
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Variable Test"
            },
            {
              "type": "SET",
              "var": "a",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "b",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "a",
              "value": "1"
            },
            {
              "type": "INFO",
              "value": "SET Command failed, expected 1, got ${a}",
              "condition": {
                "not":"EQUAL",
                "var": "a",
                "value":"1"
              }
            },
            {
              "type": "SET",
              "var": "b",
              "value": "${a}"
            },
            {
              "type": "INFO",
              "value": "SET Command with variable failed, expected 1, got ${b}",
              "condition": {
                "not":"EQUAL",
                "var": "b",
                "value":"1"
              }
            }

          ]
        }
      ]
    },

    "_math": {
      "name": "Math Test",
      "variables": {
        "a": {"type": "INT", "value": "0"},
        "b": {"type": "INT", "value": "0"}
      },
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Math Test"
            },
            {
              "type": "SET",
              "var": "a",
              "value": "0"
            },
            {
              "type": "SET",
              "var": "b",
              "value": "1"
            },
            {
              "type": "MATH",
              "var": "a",
              "value": "1+1+1+1"
            },
            {
              "type": "INFO",
              "value": "MATH (1+1+1+1) Command failed, expected 4, got ${a}",
              "condition": {
                "not":"EQUAL",
                "var": "a",
                "value":"4"
              }
            },
            {
              "type": "MATH",
              "var": "a",
              "value": "1+1-1-1"
            },
            {
              "type": "INFO",
              "value": "MATH (1+1-1-1) Command failed, expected 0, got ${a}",
              "condition": {
                "not":"EQUAL",
                "var": "a",
                "value":"0"
              }
            },
            {
              "type": "MATH",
              "var": "a",
              "value": "1+1-1-1"
            },
            {
              "type": "INFO",
              "value": "MATH (-1-1+1+1) Command failed, expected 0, got ${a}",
              "condition": {
                "not":"EQUAL",
                "var": "a",
                "value":"0"
              }
            },
            {
              "type": "MATH",
              "var": "a",
              "value": "1+1*1+1"
            },
            {
              "type": "INFO",
              "value": "MATH (1+1*1+1) Command failed, expected 4, got ${a}",
              "condition": {
                "not":"EQUAL",
                "var": "a",
                "value":"4"
              }
            },
            {
              "type": "MATH",
              "var": "a",
              "value": "3*${b}"
            },
            {
              "type": "INFO",
              "value": "MATH (3*${b}) Command failed, expected 3, got ${a}",
              "condition": {
                "not":"EQUAL",
                "var": "a",
                "value":"3"
              }
            },
            {
              "type": "MATH",
              "var": "a",
              "value": "${a}/${a}"
            },
            {
              "type": "INFO",
              "value": "MATH (${a}/${a}) Command failed, expected 1, got ${a}",
              "condition": {
                "not":"EQUAL",
                "var": "a",
                "value":"1"
              }
            }

          ]
        }
      ]
    },

    "_random": {
      "name": "Random Test",
      "variables": {
        "a": {"type": "INT", "value": "0"},
        "b": {"type": "INT", "value": "0"}
      },
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Random Test"
            },
            {
              "type": "RANDOM",
              "var": "a",
              "args": {
                "min": "10",
                "max": "20"
              }
            },
            {
              "type": "INFO",
              "value": "RANDOM (10, 20) Command failed, got ${a}",
              "condition": {
                "not":"GREATER",
                "var": "a",
                "value":"10",
                "and": [
                  {
                    "not":"LESS",
                    "var": "a",
                    "value":"20"
                  }
                ]
              }
            },
            {
              "type": "RANDOM",
              "var": "a",
              "args": {
                "min": "10",
                "max": "11"
              }
            },
            {
              "type": "INFO",
              "value": "RANDOM (10, 11) Command failed, got ${a}",
              "condition": {
                "not":"EQUAL",
                "var": "a",
                "value":"10"
              }
            }
          ]
        }
      ]
    },

    "_time": {
      "name": "Time Test",
      "variables": {
        "h": {"type": "INT", "value": "0"},
        "h2": {"type": "INT", "value": "0"},
        "m": {"type": "INT", "value": "0"},
        "s": {"type": "INT", "value": "0"}
      },
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Time Test"
            },
            {
              "type": "TIME",
              "args": {
                "h": "h",
                "m": "m",
                "s": "s"
              }
            },
            {
              "type": "INFO",
              "value": "Current Time ${h}:${m}:${s}"
            },
            {
              "type": "TIME",
              "args": {
                "tz": "GMT",
                "h": "h",
                "m": "m",
                "s": "s"
              }
            },
            {
              "type": "INFO",
              "value": "GMT Time ${h}:${m}:${s}"
            },
            {
              "type": "TIME",
              "args": {
                "tz": "GMT+1",
                "h": "h2",
                "m": "m",
                "s": "s"
              }
            },
            {
              "type": "INFO",
              "value": "GMT+1 Time ${h2}:${m}:${s}"
            },
            {
              "condition":{
                "not":"EQUAL",
                "var":"h2",
                "value":"${h}"
              },
              "type": "INFO",
              "value": "TimeZone worked"
            }
          ]
        }
      ]
    },

    "_link": {
      "name": "Link Test",
      "variables": {
        "testD": {"type": "INT", "value": "0"}
      },
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Start: Link Test, The value of ${testD} = 0"
            },
            {
              "type": "LINK",
              "value": "_link_task"
            },
            {
              "type": "INFO",
              "value": "End: Link Test: The value of ${testD} = 2"
            }
          ]
        }
      ]
    },

    "_link_task": {
      "name": "Link Task",
      "variables": {
        "testD": {"type": "INT", "value": "0"}
      },
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "This is a Link, and if you see this, everything is fine, setting value to 2"
            },
            {
              "type": "SET",
              "var": "testD",
              "value": "2"
            }
          ]
        }
      ]
    },

    "_end": {
      "name": "End of Test",
      "variables": {

      },
      "statements": [
        {
          "actions": [
            {
              "type": "INFO",
              "value": "Test Over"
            },
            {
              "type": "STOP"
            }
          ]
        }
      ]
    }

  }
}